<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_credit_card"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/introbackground">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/size_device_5">

        <TextView
            android:layout_width="wrap_content"
            android:text="PAYMENTS DETAILS"
            android:maxLength="24"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/size_device_25"
            android:textSize="@dimen/text_size_medium"
            android:id="@+id/textViewCardInfo"
            android:paddingLeft="@dimen/size_device_12"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/layout_Credit_Number"
            android:layout_marginLeft="@dimen/size_device_10"
            android:layout_marginRight="@dimen/size_device_10"
            android:layout_marginTop="@dimen/size_device_50"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_device_40"
                android:background="@drawable/shape_rect_white_border_1_red"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_device_36"
                    android:layout_marginLeft="@dimen/size_device_10"
                    android:layout_marginRight="@dimen/size_device_10"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_rect_white_border_1_red">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/add_card_placeholder"
                        android:id="@+id/card_image"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/size_device_20" />


                    <EditText
                        android:id="@+id/get_card"
                        android:textCursorDrawable="@null"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:inputType="number"
                        android:layout_marginLeft="@dimen/size_device_10"
                        android:maxLength="19"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/text_size_small"
                        android:textColorHint="@color/hint_color"
                        android:hint="Enter card number" />

                </LinearLayout>



            </RelativeLayout>

        </RelativeLayout>



    </RelativeLayout>
</RelativeLayout>
